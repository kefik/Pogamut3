<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>cz.cuni.amis.pogamut</groupId>
		<artifactId>pogamut-pom</artifactId>
		<version>3.8.1-SNAPSHOT</version>
		<relativePath>../../Poms/PogamutPom/pom.xml</relativePath>
	</parent>

	<groupId>cz.cuni.amis.pogamut.ut2004</groupId>
	<artifactId>ut2004-tournament-dm-table</artifactId>
	<version>3.8.1-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>ut2004-tournament-table</name>
	<url>http://diana.ms.mff.cuni.cz/maven-sites/pogamut/${project.version}/${project.artifactId}/</url>
	
	<properties>
		<main.deathmatch.console.class>cz.cuni.amis.pogamut.ut2004.tournament.dm.table.Main</main.deathmatch.console.class>
		<main.deathmatch.excel.class>cz.cuni.amis.pogamut.ut2004.tournament.dm.table.MainExcel</main.deathmatch.excel.class>
		<main.teamdeathmatch.console.class>cz.cuni.amis.pogamut.ut2004.tournament.tdm.table.Main</main.teamdeathmatch.console.class>
		<main.teamdeathmatch.excel.class>cz.cuni.amis.pogamut.ut2004.tournament.tdm.table.MainExcel</main.teamdeathmatch.excel.class>
		<main.capturetheflag.console.class>cz.cuni.amis.pogamut.ut2004.tournament.ctf.table.Main</main.capturetheflag.console.class>
		<main.capturetheflag.excel.class>cz.cuni.amis.pogamut.ut2004.tournament.ctf.table.MainExcel</main.capturetheflag.excel.class>
	</properties>

	<dependencies>
	    <dependency>
        <groupId>cz.cuni.amis.pogamut.ut2004</groupId>
        <artifactId>ut2004-tournament</artifactId>
        <version>3.8.1-SNAPSHOT</version>
      </dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>2.7</version>
		</dependency>
		<dependency>
		   <groupId>com.martiansoftware</groupId>
		   <artifactId>jsap</artifactId>
		   <version>2.1</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jexcelapi</groupId>
			<artifactId>jxl</artifactId>
			<version>2.6.12</version>
		</dependency>
	</dependencies>
	
	<repositories>
        <repository>
            <id>amis-artifactory</id>
            <name>AMIS Artifactory</name>
            <url>http://diana.ms.mff.cuni.cz:8081/artifactory/repo</url>
        </repository>
    </repositories>
    
    <profiles>
		<profile>
			<id>one-jar-package</id>
			<activation>
				<file>
					<missing>skip.one-jar.package</missing>
				</file>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>buildnumber-maven-plugin</artifactId>
						<version>1.0-beta-4</version>
						<executions>
							<execution>
								<id>execute-buildnumber-maven-plugin</id>
								<phase>none</phase>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.dstovall</groupId>
						<artifactId>onejar-maven-plugin</artifactId>
						<version>1.4.4</version>
						<executions>
						  <!-- DEATHMATCH -->
							<execution>
							  <id>DM-ONEJAR</id>
								<phase>package</phase>
								<configuration>
									<!-- Optional -->
									<onejarVersion>0.97</onejarVersion>
									<!--
										Optional, use only if you need to include native libraries
										(dll's) <binlibs> <fileSet>
										<directory>${project.build.directory}/dllextract</directory>
										<includes> <include>test.dll</include> </includes> </fileSet>
										</binlibs>
									-->
									<!-- Optional, default is false -->
									<attachToBuild>true</attachToBuild>
									<!-- Optional, default is "onejar" -->
									<classifier>dm-onejar</classifier>
									<mainClass>${main.deathmatch.console.class}</mainClass>
								</configuration>
								<goals>
									<goal>one-jar</goal>
								</goals>
							</execution>
							<execution>
							  <id>DM-EXCEL-ONEJAR</id>
								<phase>package</phase>
								<configuration>
									<onejarVersion>0.97</onejarVersion>
									<attachToBuild>true</attachToBuild>
									<classifier>dm-excel-onejar</classifier>
									<mainClass>${main.deathmatch.excel.class}</mainClass>
								</configuration>
								<goals>
									<goal>one-jar</goal>
								</goals>
							</execution>
							
							<!-- TEAM DEATHMATCH -->							
							<execution>
							  <id>TDM-ONEJAR</id>
								<phase>package</phase>
								<configuration>
									<onejarVersion>0.97</onejarVersion>
									<attachToBuild>true</attachToBuild>
									<classifier>tdm-onejar</classifier>
									<mainClass>${main.teamdeathmatch.console.class}</mainClass>
								</configuration>
								<goals>
									<goal>one-jar</goal>
								</goals>
							</execution>
							<execution>
							  <id>TDM-EXCEL-ONEJAR</id>
								<phase>package</phase>
								<configuration>
									<onejarVersion>0.97</onejarVersion>
									<attachToBuild>true</attachToBuild>
									<classifier>tdm-excel-onejar</classifier>
									<mainClass>${main.teamdeathmatch.excel.class}</mainClass>
								</configuration>
								<goals>
									<goal>one-jar</goal>
								</goals>
							</execution>
							
							<!-- CAPTURE THE FLAG 
							<execution>
							  <id>CTF-ONEJAR</id>
								<phase>package</phase>
								<configuration>
									<onejarVersion>0.97</onejarVersion>
									<attachToBuild>true</attachToBuild>
									<classifier>ctf-onejar</classifier>
									<mainClass>${main.capturetheflag.console.class}</mainClass>
								</configuration>
								<goals>
									<goal>one-jar</goal>
								</goals>
							</execution>
							<execution>
							  <id>CTF-EXCEL-ONEJAR</id>
								<phase>package</phase>
								<configuration>
									<onejarVersion>0.97</onejarVersion>
									<attachToBuild>true</attachToBuild>
									<classifier>ctf-excel-onejar</classifier>
									<mainClass>${main.capturetheflag.excel.class}</mainClass>
								</configuration>
								<goals>
									<goal>one-jar</goal>
								</goals>
							</execution>
							-->
						</executions>
					</plugin>
				</plugins>
			</build>


		</profile>
	</profiles>
    
</project>
